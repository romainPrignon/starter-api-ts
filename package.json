{
  "name": "starter-api-ts",
  "version": "0.0.0",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "scripts": {
    "build": "tsc",
    "release": "./scripts/release.sh",
    "release:push": "./scripts/push-release.sh",
    "release:prepare": "./scripts/prepare-release.sh",
    "start": "node src/server.js",
    "test": "jest || true"
  },
  "dependencies": {
    "body-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "lodash": "latest"
  },
  "devDependencies": {
    "husky": "0.15.0-beta.16",
    "jest": "latest",
    "nodemon": "latest"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run release:prepare",
      "pre-push": "npm run release:push"
    }
  }
}
