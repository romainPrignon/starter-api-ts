{
  "name": "starter-api-ts",
  "version": "0.5.0",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc --project src/tsconfig.json",
    "build:dev": "tsc --project src/tsconfig.json --noEmit --pretty",
    "dev": "NODE_ENV=development nodemon",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --project src/tsconfig.json",
    "lint:test": "tslint --project test/tsconfig.json",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "body-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "lodash": "latest",
    "rxjs": "6.0.0-alpha.3"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/lodash": "latest",
    "@types/node": "8.9.4",
    "jest": "latest",
    "nodemon": "latest",
    "ts-node": "latest",
    "tslint": "latest",
    "tslint-config-standard": "latest",
    "typescript": "latest"
  },
  "optionalDependencies": {
    "husky": "0.15.0-rc.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build:dev && npm run test"
    }
  }
}
