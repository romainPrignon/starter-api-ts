{
  "name": "starter-api-ts",
  "version": "0.3.0",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "build": "tsc",
    "lint": "tslint",
    "test": "jest || true",
    "release": "release-it"
  },
  "dependencies": {
    "body-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "lodash": "latest"
  },
  "devDependencies": {
    "husky": "0.15.0-rc.3",
    "jest": "latest",
    "nodemon": "latest",
    "release-it": "latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
