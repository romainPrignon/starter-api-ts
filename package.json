{
  "name": "starter-api-ts",
  "version": "0.5.0",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "types": "type/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "build:dev": "tsc --noEmit --pretty",
    "install:dev": "rm -rf node_modules && npm install --dev-only --no-optional --no-package-lock",
    "install:prod": "rm -rf node_modules && npm install --production --no-optional --no-package-lock",
    "lint": "tslint --project tsconfig.json",
    "start:local": "NODE_ENV=development nodemon -w src -e ts -x 'ts-node --require dotenv/config ./src/index.ts'",
    "start:dev": "NODE_ENV=development node --require dotenv/config dist/index.js dotenv_config_path=.env.dev",
    "start:prod": "NODE_ENV=production node --require dotenv/config dist/index.js dotenv_config_path=.env.prod",
    "test": "jest --forceExit",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "config": "1.30.0",
    "cors": "2.8.4",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "helmet": "3.12.1",
    "lodash": "4.17.10"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/config": "0.0.34",
    "@types/cors": "2.8.4",
    "@types/express": "4.11.1",
    "@types/helmet": "0.0.37",
    "@types/jest": "22.2.3",
    "@types/lodash": "4.14.109",
    "@types/node": "8.9.4",
    "jest": "22.4.4",
    "nodemon": "1.17.4",
    "ts-jest": "22.4.6",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "tslint-config-standard": "7.0.0",
    "typescript": "2.8.3"
  },
  "optionalDependencies": {
    "husky": "next"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build:dev && npm run test:coverage"
    }
  }
}
