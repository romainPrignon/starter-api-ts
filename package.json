{
  "name": "starter-api-ts",
  "version": "0.5.0",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "types": "type/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "build:dev": "tsc --noEmit --pretty",
    "dev": "NODE_ENV=development nodemon -w src -e ts -x 'ts-node --require dotenv/config ./src/index.ts'",
    "lint": "tslint --project tsconfig.json",
    "start:development": "NODE_ENV=development node --require dotenv/config dist/index.js dotenv_config_path=.env.development",
    "start:production": "NODE_ENV=production node --require dotenv/config dist/index.js dotenv_config_path=.env.production",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "body-parser": "latest",
    "compression": "latest",
    "config": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "helmet": "latest",
    "lodash": "latest",
    "rxjs": "beta"
  },
  "devDependencies": {
    "@types/compression": "latest",
    "@types/config": "latest",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/helmet": "latest",
    "@types/lodash": "latest",
    "@types/node": "8.9.4",
    "jest": "latest",
    "nodemon": "latest",
    "ts-node": "latest",
    "tslint": "latest",
    "tslint-config-standard": "latest",
    "typescript": "latest"
  },
  "optionalDependencies": {
    "husky": "next"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build:dev && npm run test"
    }
  }
}
