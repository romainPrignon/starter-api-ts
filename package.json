{
  "name": "starter-api-ts",
  "version": "0.2.1",
  "description": "starting point of a new api",
  "private": true,
  "engines": {
    "node": "^8",
    "npm": "^5.3"
  },
  "scripts": {
    "build": "tsc",
    "release:major": "./scripts/release.sh major",
    "release:minor": "./scripts/release.sh minor",
    "release:patch": "./scripts/release.sh patch",
    "start": "node src/server.js",
    "test": "jest || true"
  },
  "dependencies": {
    "body-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "lodash": "latest"
  },
  "devDependencies": {
    "husky": "0.15.0-beta.16",
    "jest": "latest",
    "nodemon": "latest"
  },
  "husky": {
    "hooks": {
      "post-commit": "./scripts/build-release.sh",
      "pre-push": "./scripts/push-release.sh"
    }
  }
}
