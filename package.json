{
  "name": "starter-api-ts",
  "version": "0.5.0",
  "description": "starting point of a new api",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^14.0",
    "npm": "^6.3"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "build": "rm -rf dist/ && tsc",
    "compile": "tsc --noEmit --pretty",
    "lint": "run-p lint:*",
    "lint:src": "eslint src/**/*.ts",
    "lint:spec": "eslint spec/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts spec/**/*.ts",
    "start:local": "NODE_ENV=development nodemon -w src -e ts -x 'ts-node --require dotenv/config ./src/index.ts'",
    "start:dev": "NODE_ENV=development node --require dotenv/config dist/index.js dotenv_config_path=.env.dev",
    "start:prod": "NODE_ENV=production node --require dotenv/config dist/index.js dotenv_config_path=.env.prod",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "changelog": "gitmoji-changelog",
    "version": "npm run changelog && git add CHANGELOG.md",
    "version:patch": "npm version --no-commit-  hooks patch -m 'ðŸ”– Release v%s'",
    "version:minor": "npm version --no-commit-hooks minor -m 'ðŸ”– Release v%s'",
    "version:major": "npm version --no-commit-hooks major -m 'ðŸ”– Release v%s'",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.0.1",
    "body-parser": "^1.19",
    "compression": "^1.7",
    "config": "^3.3.6",
    "cors": "^2.8",
    "dayjs": "^1.10.4",
    "dotenv": "^9.0.1",
    "express": "^4.17",
    "helmet": "^4.6.0",
    "immer": "^9.0.2",
    "ix": "^4.3.1",
    "lodash": "^4.17.21",
    "make-error-cause": "^2.3",
    "pino": "^6.11.3",
    "pino-pretty": "^4.8.0",
    "runtypes": "^6.3.0",
    "uuid": "^8.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7",
    "@types/config": "^0.0.38",
    "@types/cookie-parser": "^1.4",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.44",
    "@types/pino": "^6.3.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0",
    "eslint-plugin-functional": "^3.2",
    "eslint-plugin-import": "^2.22",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-promise": "^5.1.0",
    "gitmoji-changelog": "^2.2",
    "gitmoji-cli": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6",
    "nodemon": "^2.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1",
    "ts-jest": "^26.5",
    "ts-node": "^9.1",
    "tsd": "^0.14.0",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "source-map-resolve": "^0.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run compile && npm run lint && npm run test:coverage"
    }
  }
}
